<%-include ("../layouts/header") %>
<main>
  <section>
    <div class="section-contact__heading">
      <form method="POST" enctype="multipart/form-data" action="/blogs">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required placeholder="Blog title">

        <label for="content">Content:</label>
        <textarea id="content" name="content" required placeholder="Blog Content"></textarea>

        <label for="multimediaType">Multimedia Type:</label>
        <select id="multimediaType" name="multimedia[type]" required>
          <option value="" disabled>Select multimedia type</option>
          <option value="video" disabled class="text-muted">Video</option>
          <option value="image">Image</option>
          <option value="audio" disabled class="text-muted">Audio</option>
          <option value="interactive" disabled class="text-muted">Interactive</option>
        </select>

        <label for="multimediaFile">Multimedia Image:</label>
        <input type="file" id="image" name="image" accept="image/*" required>


        <label for="multimediaDescription">Multimedia Description:</label>
        <textarea id="multimediaDescription" name="multimedia[description]" maxlength="100" required placeholder="Not more than 100 chars."></textarea>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="<%= author %>" required>
        <!-- 
  <input type="file" class="admin__input" id="myFile" name="myFile" /> -->


        <button type="submit">Create Blog</button>
      </form>
    </div>
  </section>
</main>

<hr>
<%-include ("../layouts/footer") %>